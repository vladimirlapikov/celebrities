
<h2>Celebs</h2>
<body data-ng-app="APIModule">
    <div id="tblcelebs" ng-controller="APIController">
        <div class="col-lg-12">
            <h3>Add Celeb</h3>
            <div class="form-group">
                <form>
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter Celeb`s Name" data-ng-model="name" />
                    <label for="age">Age</label>
                    <input type="number" class="form-control" id="age" placeholder="Enter Celeb`s Age" data-ng-model="age" />
                    <label for="country">Country</label>
                    <input type="text" class="form-control" id="country" placeholder="Enter Celeb`s Country" data-ng-model="country" />
                </form>
            </div>
            <button class="btn btn-primary" ng-click="saveCeleb()">
                Add Celeb
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </button>
        </div>
        <div class="clearfix"></div>
        <div class="table-responsive">
            <table class="table table-hover">
                <tr>
                    <th>Name ( Double click to update)</th>
                    <th>Age ( Double click to update)</th>
                    <th>Country ( Double click to update)</th>
                    <th>Delete</th>
                </tr>
                <tr ng-repeat="c in celeb| orderBy:'country'">
                    <td ng-blur="updateCeleb(c,$event,'name')" ng-dblclick="makeEditable($event)">{{c.name}}</td>
                    <td ng-blur="updateCeleb(c,$event,'age')" ng-dblclick="makeEditable($event)">{{c.age}}</td>
                    <td ng-blur="updateCeleb(c,$event,'country')" ng-dblclick="makeEditable($event)">{{c.country}}</td>                
                    <td>
                        <button class="btn btn-danger" ng-click="deleteCeleb(c.id)" title="Delete"><span class="glyphicon glyphicon-trash"></span></button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</body>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/angular-route.js"></script>
<script src="~/Scripts/APIScripts/Module.js"></script>
<script src="~/Scripts/APIScripts/Service.js"></script>
<script src="~/Scripts/APIScripts/Controller.js"></script> 